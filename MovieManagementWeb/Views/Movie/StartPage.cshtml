@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Home</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="~/Images/logo-cinematica.png">
    <link rel="stylesheet" href="@Url.Content("~/css/index.css")">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <a class="logo" asp-action="StartPage"><img src="~/Images/logo_transparent.png" alt="logo" height="75" width="75"></a>
        <nav>
            <ul class="nav__links">
                <li><a class="cta" asp-action="StartPage"><i class="fa fa-home"></i> Home</a></li>
                <li class="dropdown">
                    <a href="" class="dropbtn">Register/Login <i class="fa fa-caret-down"></i></a>
                    <div class="dropdown-content">
                        <a asp-controller="account" asp-action="Login">Register/Login as User</a>
                        <a asp-controller="account" asp-action="AdminLogin">Login as Admin</a>
                    </div>
                </li>
                <li><a asp-action="AboutUs"><i class="fa fa-address-card"></i> About Us</a></li>
            </ul>
        </nav>
        <p class="menu cta">Menu</p>
    </header>
    <div id="mobile__menu" class="overlay">
        <a class="close">&times;</a>
        <div class="overlay__content">
            <a asp-action="StartPage"><i class="fa fa-home"></i> Home</a>
            <li class="dropdown">
                <a href="" class="dropbtn">Register/Login <i class="fa fa-caret-down"></i></a>
                <div class="dropdown-content">
                    <a asp-controller="account" asp-action="Login">Register/Login as User</a>
                    <a asp-controller="account" asp-action="AdminLogin">Login as Admin</a>
                </div>
            </li>
            <a asp-action="AboutUs"><i class="fa fa-address-card"></i> About Us</a>
        </div>
    </div>

    <div class="container">
        <div class="content">
            <h1><strong><span>CINEMATICA</span></strong></h1>
            <br>
            <h2>Your movies, and TV shows take center stage.</h2>
            <br>
            <h3>
                Cinematica is the best way to look for movies, and
                TV shows that you want to enjoy.
            </h3>
        </div>
    </div>

    <div class="footer">
        <p>Copyright &copy; 2021 Cinematica</p>
    </div>

    <script type="text/javascript" src="~/js/menu.js"></script>
</body>
</html>
