@model IEnumerable<MovieData.Models.Movieentity>
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>searchid</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.moviename)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.movieyear)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.moviecategory)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.movielanguage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.movierating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.movielead)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.moviedescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.movieduration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.moviebudget)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.moviename)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.movieyear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.moviecategory)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.movielanguage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.movierating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.movielead)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.moviedescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.movieduration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.moviebudget)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-movieid="@item.movieid">Edit</a> |
                        <a asp-action="searchyear" asp-route-movieyear="@item.movieyear">More in this year </a> |
                        <a asp-action="searchlanguage" asp-route-movielanguage="@item.movielanguage">More in this language</a> |
                        <a asp-action="searchcategory" asp-route-moviecategry="@item.moviecategory">More in this category</a> |
                        <a asp-action="searchrating" asp-route-movierating="@item.movierating">More in this rating or above</a> |
                        <a asp-action="searchlead" asp-route-movielead="@item.movielead">More with this lead actor</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
